{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form action="{{ path('app_login') }}" method="post">
        <h5>{{ 'title.please_log_in_to_your_bikepoint_account'|trans }}</h5><br>
        <div class="form-group row">
            <label for="username" class="col-sm-2 col-form-label">{{ 'label.email'|trans }}:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}">
            </div>
        </div>
        <div class="form-group row">
            <label for="password" class="col-sm-2 col-form-label">{{ 'label.plain_password'|trans }} :</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="password" name="_password"><br>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button type="submit" class="btn btn-secondary">{{ 'action.login'|trans }}</button>

            </div>
        </div>
    </form>
{% endblock %}
