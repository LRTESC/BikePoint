{% include 'flash.html.twig' %}

{% if crud.paginator %}
    <div class="row">
            {% for course in crud.paginator %}
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="title-user-management">
                        <h4 class="card-title">{{ course.title }}</h4></div>
                    <div class="col">
                        <strong>Code Postal:</strong> {{ course.zipCode }}
                    </div>
                    <div class="col">
                        <strong>Ville:</strong> {{ course.city }}
                    </div>
                    <div class="col">
                        <strong>Niveau:</strong> {{ course.level }}
                    </div>
                    <div class="col">
                        <strong>Distance:</strong> {{ course.distance }}
                    </div>
                    <div class="col">
                        <strong>Denivelé Positif:</strong> {{ course.positiveAscent }}
                    </div>
                    <div class="col">
                        <strong>Altitude Max:</strong> {{ course.maximumAltitude }}
                    </div>
                    <div class="col">
                        <strong>Pente Négative:</strong> {{ course.negativeGradient }}
                    </div>
                    <div class="col">
                        <strong>Altitude Min:</strong> {{ course.minimumAltitude }}
                    </div>
                    <div class="text-center mt-3">
                        <a href="{{ path('courses_edit', {'id': course.id}) }}" ><i
                                    class="fa-solid fa-pen"></i></a> | |
                        <a href="{{ path('courses_ajax_delete', {'id': course.id}) }}" class="confirm-delete"><i
                                    class="fa-solid fa-trash-can"></i></a>
                    </div>
                </div>
            </div>
        </div>
            {% endfor %}
    </div>
<div class="text-center mt-4">

    <div class="info-pagination">
        {{ 'pagination_count_results'|trans({'count': crud.paginator.count}) }}<br/>
        {{ 'pagination_indices'|trans({'first': crud.paginator.firstIndice, 'last': crud.paginator.lastIndice}) }}<br/>
        {{ 'pagination_pages'|trans({'page': crud.paginator.page, 'lastPage': crud.paginator.lastPage}) }}
    </div>

    {{ crud_paginator_links(crud) }}
{% endif %}
</div>
