{% include 'flash.html.twig' %}

{% if crud.paginator %}
    <div class="table table-responsive">
        <table class="table table-success table-striped">
            <thead>
            <tr>
                {{ crud_th('id', crud) }}
                {{ crud_th('title', crud) }}
                {{ crud_th('zipCode', crud) }}
                {{ crud_th('city', crud) }}
                {{ crud_th('level', crud) }}
                {{ crud_th('distance', crud) }}
                {{ crud_th('positiveAscent', crud) }}
                {{ crud_th('maximumAltitude', crud) }}
                {{ crud_th('negativeGradient', crud) }}
                {{ crud_th('minimumAltitude', crud) }}
                <th>{{ 'label.action'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for course in crud.paginator %}
                <tr>
                    {{ crud_td('id', crud, course.id) }}
                    {{ crud_td('title', crud, course.title) }}
                    {{ crud_td('zipCode', crud, course.zipCode) }}
                    {{ crud_td('city', crud, course.zipCode) }}
                    {{ crud_td('level', crud, course.level) }}
                    {{ crud_td('distance', crud, course.distance) }}
                    {{ crud_td('positiveAscent', crud, course.positiveAscent) }}
                    {{ crud_td('maximumAltitude', crud, course.maximumAltitude) }}
                    {{ crud_td('negativeGradient', crud, course.negativeGradient) }}
                    {{ crud_td('minimumAltitude', crud, course.minimumAltitude) }}
                    <td>
                        <a href="{{ path('courses_edit', {'id': course.id}) }}" ><i
                                    class="fa-solid fa-pen"></i></a> | |
                        <a href="{{ path('courses_ajax_delete', {'id': course.id}) }}" class="confirm-delete"><i
                                    class="fa-solid fa-trash-can"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="info-pagination">
        {{ 'pagination_count_results'|trans({'count': crud.paginator.count}) }}<br/>
        {{ 'pagination_indices'|trans({'first': crud.paginator.firstIndice, 'last': crud.paginator.lastIndice}) }}<br/>
        {{ 'pagination_pages'|trans({'page': crud.paginator.page, 'lastPage': crud.paginator.lastPage}) }}
    </div>

    {{ crud_paginator_links(crud) }}
{% endif %}

{{ crud_display_settings(crud) }}